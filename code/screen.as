package code {		import flash.display.MovieClip;	import flash.display.SimpleButton;	import flash.events.MouseEvent;	import flash.ui.Mouse;			public class screen extends MovieClip {				protected var close_btn:SimpleButton;				public function screen() {			// constructor code						close_btn = new CloseButton();			addChild(close_btn);						close_btn.addEventListener(MouseEvent.CLICK,onClosed);		}				public function onClosed(e:MouseEvent):void		{			if (parent != null)			{				parent.removeChild(this);			}		}	}	}